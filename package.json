  },
  "devDependencies": {
    "@gobarber/eslint-config": "*",
    "@types/uuid": "^8.3.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "typescript": "^4.1.3"
  }
}
